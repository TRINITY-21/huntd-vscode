{
  "name": "huntd",
  "displayName": "huntd — your coding fingerprint",
  "description": "Local git analytics dashboard — streaks, heatmaps, languages, achievements — right in VS Code.",
  "version": "0.1.0",
  "publisher": "JosephYawAgyeman",
  "author": {
    "name": "TRINITY-21"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TRINITY-21/huntd-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "git",
    "analytics",
    "dashboard",
    "streaks",
    "heatmap",
    "coding-stats",
    "developer-tools"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "huntd.openDashboard",
        "title": "Huntd: Open Dashboard",
        "icon": "$(graph)"
      },
      {
        "command": "huntd.refresh",
        "title": "Huntd: Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "huntd-sidebar",
          "title": "huntd",
          "icon": "resources/huntd-icon.svg"
        }
      ]
    },
    "views": {
      "huntd-sidebar": [
        {
          "type": "webview",
          "id": "huntd.dashboardView",
          "name": "Dashboard"
        }
      ]
    },
    "configuration": {
      "title": "huntd",
      "properties": {
        "huntd.scanPath": {
          "type": "string",
          "default": "",
          "description": "Path to scan for git repos. Defaults to workspace root."
        },
        "huntd.authorFilter": {
          "type": "string",
          "default": "",
          "description": "Filter commits by author name or email."
        },
        "huntd.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh when git changes are detected."
        },
        "huntd.refreshInterval": {
          "type": "number",
          "default": 60,
          "description": "Auto-refresh interval in seconds."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
